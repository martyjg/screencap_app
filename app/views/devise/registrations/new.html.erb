<h1>Sign up</h1>

<div class="row">
  <div class="small-6 columns instructions">
  <li><i class="fa fa-film"></i></li>
  <li>Take a screenshot of a movie</li>
  <li><i class="fa fa-upload"></i></li>
  <li>Upload it!</li>
  <li><i class="fa fa-comments-o"></i></li>
  <li>Write your own or vote for your favourite caption</li>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="small-6 columns">
    <div class="row">
      <div class="small-8 small-centered large-6 columns large-centered">
        <label>Username
          <%= f.text_field :username, autofocus: true %>
        </label>
      </div>
    </div>
    <div class="row">
      <div class="small-8 small-centered large-6 columns large-centered">
        <label>Email
          <%= f.text_field :email %>
        </label>
      </div>
    </div>
    <div class="row">
      <div class="small-8 small-centered large-6 columns large-centered">
        <label>Password
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </label>
      </div>
    </div>
    <div class="row">
      <div class="small-8 small-centered large-6 columns large-centered">
        <label>Password Confirmation
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </label>
      </div>
    </div>
    <div class="row">
      <div class="small-8 small-centered large-6 columns large-centered">
        <%= f.label :profile_picture %>
        <%= f.file_field :profile_picture %>
      </div>
    </div>
    <div class="row">
      <div class="small-8 small-centered large-6 columns large-centered sign-up-button">
        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>
      </div>
    </div>
  </div>
  <% end %>

</div>

<%= render "devise/shared/links" %>
