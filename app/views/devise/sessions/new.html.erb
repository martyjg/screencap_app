<h1>Log in</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="row">
  <div class="small-8 small-centered large-6 columns large-centered">
    <label>Email
      <%= f.text_field :email, autofocus: true %>
    </label>
  </div>
</div>
<div class="row">
  <div class="small-8 small-centered large-6 columns large-centered">
    <label>Password
      <%= f.password_field :password, autocomplete: "off" %>
    </label>
  </div>
</div>

<% if devise_mapping.rememberable? -%>
<div class="field">
  <%= f.check_box :remember_me %>
  <%= f.label :remember_me %>
</div>
<% end -%>

<div class="row">
  <div class="small-8 small-centered large-6 columns large-centered sign-up-button">
    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>
