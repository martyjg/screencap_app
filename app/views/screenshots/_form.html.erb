<%= form_for(@screenshot) do |f| %>
<% if @screenshot.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@screenshot.errors.count, "error") %> prohibited this screenshot from being saved:</h2>
  <ul>
    <% @screenshot.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<form>
  <div class="row">
    <div class="field">
      <div class="small-6 columns">
        <%= f.label :screenshot_image, class:"right" %>
      </div>
      <div class="small-6 columns">
        <%= f.file_field :screenshot_image %>
      </div>
    </div>
  </div>
  <div class="row">
  <div class="small-8 columns small-offset-2">
      <div class="field">
        <%= f.text_area :movie, placeholder:"Movie" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="small-8 columns small-offset-2">
      <div class="field">
        <%= f.text_area :category, placeholder:"Category" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="small-8 columns">
      <div class="actions">
        <%= f.submit %>
      </div>
    </div>
  </div>
</form>

<% end %>
