<p id="notice"><%= notice %></p>

<div class="row">
  <div class="small-12 columns">
    <% @screenshots.each do |screenshot| %>
    <div class="screenshot-index-box">
      <%= image_tag screenshot.screenshot_image %>
      <li><%= link_to "posted by " + screenshot.user.username, screenshot.user %></li>
      <% if screenshot.comments.size > 0 %>
      <li><%= screenshot.comments.first.comment %></li>
      <% else %>
      <li>Awaiting your caption</li>
      <% end %>
    </div>
    <% end %>
  </div>
</div>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Movie</th>
      <th>Category</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @screenshots.each do |screenshot| %>
    <tr>
      <td><%= image_tag screenshot.screenshot_image %></td>
      <td><%= screenshot.movie %></td>
      <td><%= screenshot.category %></td>
      <td><%= screenshot.user.username %></td>
      <td><%= link_to 'Show', screenshot %></td>
      <td><%= link_to 'Edit', edit_screenshot_path(screenshot) %></td>
      <td><%= link_to 'Destroy', screenshot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Screenshot', new_screenshot_path %>
