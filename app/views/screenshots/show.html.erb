<p id="notice"><%= notice %></p>


<div class="screenshot-show-box">
  <%= render partial: 'header', :locals => {:screenshot => @screenshot} %>
  <%= image_tag @screenshot.screenshot_image %>
  <% if @screenshot.user == current_user %>
  <%= link_to 'Edit Screenshot', edit_screenshot_path(@screenshot), class:"edit-button-box" %>
  <% end %>
  <%= render partial: 'comments/form', locals: { commentable: @screenshot } %>
  <%= render partial: 'comments/comment', collection: @comments, locals: { commentable: @screenshot } %>
</div>


