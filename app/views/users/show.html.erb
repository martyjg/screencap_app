
<div class="row">
  <div class="small-12 columns">
    <h1><%= @user.username %></h1>
    <h3><%= @user.email %></h3>
    <%= image_tag @user.profile_picture, class:"profile-picture-show" %>
    <% if @user != current_user %>
      <% if current_user.voted_up_on? @user %>
        <%= link_to "Unfollow", dislike_user_path(@user), method: :put, class:"follow-button" %>
      <% else %>
        <%= link_to "Follow", like_user_path(@user), method: :put, class:"follow-button" %>
      <% end %>
    <% end %>
  </div>
</div>




<% if @user == current_user %>
<%= link_to "Edit My Profile", edit_user_registration_path %>
<% end %>

<div class="row">
  <div class="small-12 columns">
    <%= render @user.screenshots %>
  </div>
</div>
