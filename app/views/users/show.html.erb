<h1>User Profile Page</h1>

<%= @user.username %>
<%= @user.email %>

<% if @user != current_user %>
<%= link_to "Follow", like_user_path(@user), method: :put %>
<%= link_to "Unfollow", dislike_user_path(@user), method: :put %>
<% end %>

<h2>Following</h2>
<% @user.find_up_voted_items.each do |user| %>
  <%= link_to user.username, user_path(user) %>
<% end %>
